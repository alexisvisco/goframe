package app

import (
  "github.com/alexisvisco/goframe/core/helpers/fxutil"
  mail "github.com/alexisvisco/goframe/mailer"
  "go.uber.org/fx"

	{{ .imports }}
)

func Module(cfg *config.Config) []fx.Option {
  return []fx.Option{
    fxutil.Logger(),
    fx.Supply(cfg, cfg.GetDatabase()),
		fx.Supply(mail.NewSender(cfg.GetMail())),
    fx.Provide(
      {{- range .provides }}
      {{ . }},
      {{- end }}
    ),
  }
}
